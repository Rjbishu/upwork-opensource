<div class="col-md-3 col-sm-3 col-xs-12">
    <div class="side_header">
        <div class="topriht align-center">
            {% if status %}
                {% if job_info['hired'] == 0 %}
               
                    {% set link =  base_url("jobs/offers?user_id=" ~ v_user_id ~ '&job_id=' ~ v_job_id ) %}
                   
                    <a href="{{ link }}">
                        <button id="buttonsecond">
                            {{ app_lang('text_job_hire_me') }}&nbsp;&nbsp;
                            <i class="fa fa-caret-right" aria-hidden="true"></i>
                        </button>
                    </a>
                {% endif %}
            {% endif %}
            <br/>

            <a href="{{ base_url('freelancer/' ~ username) }}" >
                <button class="btn" id="view-profile-btn">
                     {{ app_lang('text_job_btn_op_view_profile') }}
					 <i class="fa fa-caret-right" aria-hidden="true"></i>
                </button>
            </a>
            <br/>

            {% if  job_info['withdrawn'] == 1 or job_info['bid_reject'] == 1 %}
                {% if job_info['withdrawn_by'] == 1 %}
                    <small>{{ app_lang('text_job_declined_by_free') }} </small>
                {% elseif job_info['withdrawn_by'] == 2 %}
                    <small>{{ app_lang('text_job_declined_by_you') }}</small>
                {% endif %}
           {% else %}
                <div class="decline-line">
                    <i class="fa fa-times-circle" aria-hidden="true"></i> 
                    <small>
                        <a id="btn-decline-applicant" href="{{ site_url('jobs/bid_decline/') }}"
                           data-id='{{ job_info['bid_id'] }}' 
                           data-job='{{ job_id }}'
                           data-redirect="{{ site_url('declined?job_id=' ~ job_id) }}" >
                            {{ app_lang('text_job_declined_candidate') }}
                        </a>
                    </small>
                </div>
            {% endif %}
        </div>
    </div>
</div>